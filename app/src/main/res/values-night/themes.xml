<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RepositorySearcher" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/dark_on_primary</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <style name="ThemeOverlayToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_animated_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.RepositorySearcher</item>
    </style>

</resources>